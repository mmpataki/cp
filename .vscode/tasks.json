{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "cp_test",
            "command": "python3",
            "args": [
                "${workspaceFolder}/bin/cphelper.py",
                "test",
                "${fileDirname}",
                "${fileBasename}",
                "test"
            ],
            "presentation": {
                "echo": false,
                "showReuseMessage": false,
            }
        },
        {
            "type": "shell",
            "label": "cp_prod",
            "command": "python3",
            "args": [
                "${workspaceFolder}/bin/cphelper.py",
                "test",
                "${fileDirname}",
                "${fileBasename}",
                "prod"
            ],
            "presentation": {
                "echo": false,
                "showReuseMessage": false,
            }
        },
        {
            "type": "shell",
            "label": "cp_custom",
            "command": "python3",
            "args": [
                "${workspaceFolder}/bin/cphelper.py",
                "test",
                "${fileDirname}",
                "${fileBasename}",
                "custom"
            ],
            "presentation": {
                "echo": false,
                "showReuseMessage": false,
                "focus": true
            }
        },
        {
            "type": "shell",
            "label": "cp_setup",
            "command": "python3",
            "args": [
                "${workspaceFolder}/bin/cphelper.py",
                "setup",
                "${workspaceFolder}",
                "${input:platform}",
                "${input:contestid}",
                "/home/mmp/cred",
                "${input:lang}"
            ],
            "presentation": {
                "echo": false,
                "showReuseMessage": false,
            }
        },
        {
            "type": "shell",
            "label": "cp_archive",
            "command": "python3",
            "args": [
                "${workspaceFolder}/bin/cphelper.py",
                "archive",
                "${workspaceFolder}",
                "${input:platform}",
                "${input:contestid}"
            ],
            "presentation": {
                "echo": false,
                "showReuseMessage": false,
            }
        },
        {
            "type": "shell",
            "label": "view_in",
            "command": "python3",
            "args": [
                "${workspaceFolder}/bin/cphelper.py",
                "viewin",
                "${input:input_type}",
                "${selectedText}"
            ],
            "presentation": {
                "echo": false,
                "showReuseMessage": false,
                "reveal": "never"
            }
        },
        {
            "type": "shell",
            "label": "opcp",
            "command": "${workspaceFolder}/bin/opcp.sh",
            "args": [
                "${workspaceFolder}",
                "${input:contestid}"
            ],
            "presentation": {
                "echo": false,
                "showReuseMessage": false,
            }
        },
    ],
    "inputs": [
        {
            "id": "contestid",
            "type": "promptString",
            "description": "contestid (eg. 1445)"
        },
        {
            "id": "platform",
            "type": "pickString",
            "options": [
                "cf",
                "ac",
                "cc"
            ],
            "description": "Judging platform (cf: codeforces, ac: atcoder)"
        },
        {
            "id": "lang",
            "type": "pickString",
            "options": [
                {
                    "label": "Kotlin",
                    "value": "kt"
                },
                {
                    "label": "Python",
                    "value": "py"
                },
                {
                    "label": "C++",
                    "value": "cpp"
                }
            ],
            "description": "Programming Language"
        },
        {
            "id": "input_type",
            "type": "pickString",
            "options": [
                "graph-mat",
                "graph-adj",
                "graph-adj-list"
            ],
            "description": "Input type of this file"
        }
    ]
    /*
    
